<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DatabaseSample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DatabaseSample"
    Shell.FlyoutBehavior="Disabled"
    Title="DatabaseSample">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <TabBar>
        <Tab Title="Quarters">
            <ShellContent
                ContentTemplate="{DataTemplate local:QuartersPage}"
                Route="QuarterPage" />
        </Tab>
    </TabBar>
</Shell>
